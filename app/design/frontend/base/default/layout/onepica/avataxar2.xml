<layout>
    <checkout_cart_index>
        <reference name="head">
            <block type="avataxar2/head_script" name="avataxar2.head.script" template="onepica/avataxar2/head_script.phtml" />
        </reference>
    </checkout_cart_index>

    <checkout_onepage_index>
        <reference name="head">
            <block type="avataxar2/head_script" name="avataxar2.head.script" template="onepica/avataxar2/head_script.phtml" />
        </reference>
    </checkout_onepage_index>

    <avataxar2_popup_gencert>
        <reference name="root">
            <remove name="header"/>
            <remove name="footer"/>
            <action method="setTemplate"><template>page/1column.phtml</template></action>
        </reference>
        <reference name="head">
            <block type="avataxar2/head_script" name="avataxar2.head.script" template="onepica/avataxar2/head_script.phtml" />
        </reference>
        <reference name="content">
            <block type="avataxar2/popup_form" name="avataxar2.popup.form" template="onepica/avataxar2/popup/form.phtml" />
        </reference>
    </avataxar2_popup_gencert>
</layout>
