<config>
    <modules>
        <OnePica_AvaTaxAr2>
            <version>3.6.0.0</version>
        </OnePica_AvaTaxAr2>
    </modules>
    <global>
        <blocks>
            <avataxar2>
                <class>OnePica_AvaTaxAr2_Block</class>
            </avataxar2>
        </blocks>
        <helpers>
            <avataxar2>
                <class>OnePica_AvaTaxAr2_Helper</class>
            </avataxar2>
        </helpers>
        <models>
            <avataxar2>
                <class>OnePica_AvaTaxAr2_Model</class>
            </avataxar2>
        </models>
        <events>
            <controller_front_init_before>
                <observers>
                    <avataxar2>
                        <type>singleton</type>
                        <class>avataxar2/observer_loadAvaTaxExternalLib</class>
                        <method>execute</method>
                    </avataxar2>
                </observers>
            </controller_front_init_before>
            <adminhtml_customer_prepare_save>
                <observers>
                    <avataxar2>
                        <type>singleton</type>
                        <class>avataxar2/observer_adminhtmlCustomerPrepareSave</class>
                        <method>execute</method>
                    </avataxar2>
                </observers>
            </adminhtml_customer_prepare_save>
        </events>
        <resources>
            <avataxar2_setup>
                <setup>
                    <module>OnePica_AvaTaxAr2</module>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </avataxar2_setup>
        </resources>
    </global>

    <!-- the adminhtml section is repeated in config.xml & adminhtml.xml for backwards compatibility -->
    <!-- @see http://www.magentocommerce.com/bug-tracking/issue?issue=8496 -->
    <adminhtml>
        <layout>
            <updates>
                <avatax>
                    <file>onepica/avataxar2.xml</file>
                </avatax>
            </updates>
        </layout>
        <translate>
            <modules>
                <OnePica_AvaTaxAr2>
                    <files>
                        <default>OnePica_AvaTax.csv</default>
                    </files>
                </OnePica_AvaTaxAr2>
            </modules>
        </translate>
    </adminhtml>
</config>
